<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                   <img src="~/images/360Public logo.PNG" alt="360 Public" width="207" height="87" />
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("How It Works", "HowItWorks", "Home")</li>
                            <li>@Html.ActionLink("News", "News", "Home")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; 360 Public @DateTime.Now.Year</p>
                </div>
                <div class="float-right">
                    <p class="site-links">@Html.ActionLink("Home", "Index", "Home")
                    @Html.ActionLink("What We Offer", "Index", "Offer")
                    @Html.ActionLink("Studies", "Index", "Studies")
                    @Html.ActionLink("News", "Index", "News")
                    @Html.ActionLink("Testimonials", "Index", "Testimonials")</p>
                    <p class="site-links">@Html.ActionLink("Privacy", "Index", "Privacy")
                    @Html.ActionLink("Terms", "Index", "Terms")
                    @Html.ActionLink("About Us", "Index", "AboutUs")
                    @Html.ActionLink("Send Us Feedback", "Index", "SendUsFeedback")
                    @Html.ActionLink("Subscribe", "Index", "Subscribe")</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
